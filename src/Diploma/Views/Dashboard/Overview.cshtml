@{
    ViewBag.Title = "Dashboard Overview";
}
@model Diploma.Models.Dashboard

@using (Html.BeginForm("CreateTable", "Dashboard", new { Did = Model.Id }, FormMethod.Post, new {id = "create_table" }))
{
    <div class="addTable form-group">
        <input type="text" name="Name" class="form-control dashName" placeholder="Table name" autofocus required/>
        <input type="submit" class="btn btn-primary" value="Create Table" />
    </div>
}
<div class="overlay">
    @Html.Partial("CreateIssue", new Diploma.ViewModels.IssueViewModel())
    @Html.Partial("ChangeIssue", new Diploma.ViewModels.IssueViewModel())
</div>
<div class="outer">
    <div class="inner">
        @foreach (var table in Model.Tables)
        {
            @Html.Partial("TableSection", table);
        }
    </div>
</div>

