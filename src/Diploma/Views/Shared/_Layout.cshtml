    </script>-->
</head>
<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="mdl-layout__header">
            <div class="mdl-layout__header-row">
                <!-- Title -->
                <span class="mdl-layout-title">
                    <i class="material-icons" id="account">account_circle</i>
                    <ul class="submenu">
                        @*<li><a href="#">Go to my profile</a></li>*@
                        <li><a asp-controller="Account" asp-action="ChangeProfile">Edit profile</a></li>
                        <li><a asp-controller="Account" asp-action="Logout">Exit</a></li>
                    </ul>
                </span>
            </div>
        </header>
        <div class="mdl-layout__drawer">
            <span class="mdl-layout-title"><img class="asap" src="~/img/ASAP.png"></span>
            <nav class="mdl-navigation">
                <a class="mdl-navigation__link" asp-controller="Home" asp-action="Index">
                    <img src="~/img/dashboard24.png" />
                    Dashboards
                </a>
                <a class="mdl-navigation__link" asp-controller="Calendar" asp-action="Overview">
                    <img src="~/img/calendar24.png" />
                    Calendar
                </a>
                <a class="mdl-navigation__link" asp-controller="Schedule" asp-action="Overview">
                    <img src="~/img/schedule24.png" />
                    Schedule
                </a>
                <a class="mdl-navigation__link" asp-controller="LectureNotes" asp-action="Overview">
                    <img src="~/img/lecture24.png" />
                    Lectures &amp; Notes
                </a>
                
                <a class="mdl-navigation__link" asp-controller="Home" asp-action="Contacts">
                        <img src="~/img/contacts24.png" />
                    Contact us
                </a>
            </nav>
        </div>
        <div class="overlay">
       @ViewBag.Popup
            @ViewBag.Popup2
</div>
        <main class="mdl-layout__content">
            <div class="main">@RenderBody()</div>
        </main>
    </div>
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
