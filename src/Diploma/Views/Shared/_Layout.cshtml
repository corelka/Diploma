    <style>   
           html{
              font-family: 'Raleway', sans-serif;
           }

            input[readonly="readonly"]:hover{
                cursor:pointer;
            } 
          .table {
              list-style-type: none; 
              margin: 0; 
              float: left; 
              margin-right: 10px; 
              background: #eee; 
              padding: 5px; 
              width: 143px;
          }
          .issue {
              margin: 5px; 
              padding: 5px;
              width: 120px;
          }
          .popup {
              display: none;
              position: relative;
              margin:40px auto 0px auto;
              z-index:20;
              width: 30em;
              height: auto;
              padding:10px;
              background-color: #C8E6C9;
              border-radius:5px;
              box-shadow: 0px 0px 10px #000;
          }

          .overlay{
              display: none;
              width:100%;
              min-height:100%;
              background-color: rgba(0,0,0,0.5);
              overflow:hidden;
              position:fixed;
              top:0px;
              z-index:5;
          }
          .btn-primary{
              background-color: #37474F;
              border:none;
              color:white;
            }
          .btn-primary:hover,
          .btn-primary:active,
          .btn-primary:focus{
              background-color: #546E7A;
              border:none;
            }
          input[type="text"],input[type="password"]{
              color: black;
              text-align: center;
              border: 1px solid #DCEDC8;
              border-radius: 5px;
              min-height: 30px;
              min-width: 200px;
              background-color: #C8E6C9;
              }
          input[type="text"]:focus,
          input[type="password"]:focus{
                outline: 0;
                border:1px solid #80CBC4;
                background-color:#B2DFDB ;
          }

    </style>
