@{
    ViewBag.Title = "New dashboard";
}
@model Diploma.ViewModels.DashboardViewModel

    <form id="create_dashboard" class="popup" method="post" data-toggle="validator" role="form">
        <div class="form-group">
           <h4>Create new dashboard</h4>
            <input asp-for="Name" class="form-control dashName" type="text" placeholder="Name of dashboard" required/>
          
            
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary alignbutton">Submit</button>
            <input type="button" class="btn btn-primary alignbutton" onclick="javascript:PopUpHide('create_dashboard')" value="Hide" />
        </div>
       
    </form>

