@model IEnumerable<Dashboard_test.Models.Dashboard>
@{
    ViewBag.Title = "Home Page";
    
}

<h1>Hello worlde!</h1>
@if(User.IsInRole("Admin"))
{
    <h1>Admin</h1>
}
else
{
    if(User.IsInRole("Student"))
    {
        <h1>Student</h1>
    }
    else
    {
        <h1>Teacher</h1>
    }
}
<a asp-action="Calendar">Calendar</a>
<a asp-controller="Dashboard" asp-action="CreateDashboard">Create new one</a>
<a asp-action="Notes">Notes</a>
<ul>
    @foreach (var dashboard in Model)
    {
        <li><a href="/Dashboard/Overview/@dashboard.Id">@dashboard.Name</a></li>
    }
    </ul>